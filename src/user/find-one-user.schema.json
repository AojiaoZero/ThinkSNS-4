{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type" : "object",
    "properties" : {
        "id": {
            "type": "string",
            "format": "id"
        },
        "name": {
            "type": "string",
            "minLength": 4,
            "maxLength": 24,
            "pattern" : "^[a-zA-Z][a-zA-Z0-9]+$"
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "mobile": {
            "type": "string"
        }
    },
    "oneOf": [
        { "required": ["id"] },
        { "required": ["name"] },
        { "required": ["email"] },
        { "required": ["mobile"] }
    ]
}